<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3">

    <!-- Buttons -->

    <Button
        android:id="@+id/btn_todo_list"
        android:layout_width="107dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#D2C9EB"
        android:padding="8dp"
        android:text="To-Do-List"
        android:textColor="@color/black" />

    <!-- RecyclerView for Task List -->

    <!-- Add Button -->
    <Button
        android:id="@+id/btn_event"
        android:layout_width="107dp"
        android:layout_height="58dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@id/btn_todo_list"
        android:backgroundTint="@color/darkpurple"
        android:padding="8dp"
        android:text="Event"
        android:textColor="@color/cream" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="352dp"
        android:layout_height="429dp"
        android:layout_above="@id/btn_add_task"
        android:layout_below="@id/btn_todo_list"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="0dp"
        android:nestedScrollingEnabled="true"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_add_task"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/darkpurple"
        android:drawableTop="@drawable/baseline_plus_24"
        android:text="."
        android:padding="8dp"
        android:textColor="@color/cream" />


</RelativeLayout>
